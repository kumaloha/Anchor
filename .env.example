# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/anchor

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-...

# Twitter/X API v2
TWITTER_BEARER_TOKEN=...
TWITTER_API_KEY=...
TWITTER_API_SECRET=...
TWITTER_ACCESS_TOKEN=...
TWITTER_ACCESS_SECRET=...

# 微博 API (可选，不填则使用爬虫模式)
WEIBO_APP_KEY=
WEIBO_APP_SECRET=
WEIBO_ACCESS_TOKEN=

# 采集配置
COLLECTOR_INTERVAL_MINUTES=60
COLLECTOR_MAX_RESULTS_PER_QUERY=100

# RSS 源（逗号分隔，留空使用内置默认列表）
RSS_FEEDS=

# ── 语音转录（YouTube 音频 → 文字）──────────────────────────────────────────
# 使用 OpenAI Whisper 兼容 API；不填则复用 LLM_API_KEY（OpenAI 模式下自动生效）
# Groq 免费额度极高，推荐：https://console.groq.com  BASE_URL=https://api.groq.com/openai/v1
ASR_API_KEY=
ASR_BASE_URL=
ASR_MODEL=whisper-1              # Groq 用 whisper-large-v3-turbo
YOUTUBE_MAX_DURATION=1800        # 最大转录时长（秒），0=不限制

# ── Web Search（Layer3 联网事实核查）─────────────────────────────────────────
# Tavily Search API（免费注册 1000次/月）: https://app.tavily.com
# 不填则 Layer3 仅使用 LLM 训练知识，无联网能力
TAVILY_API_KEY=

# ── 宏观数据 API Keys（Layer3 事实核查，均可免费注册）────────────────────────
# FRED API Key: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=
# BLS API Key:  https://www.bls.gov/developers/home.htm
BLS_API_KEY=
